extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main
  if(role.permissions.includes("account_view"))
    +alert-error(5000)
    h1(class="mb-4") Danh sách tài khoản
    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-4.text-center
            if(role.permissions.includes("account_create"))
              a(
                href=`${prefixAdmin}/accounts/create`
                class="btn btn-outline-success"
              ) + Thêm mới
          .col-4.text-right
            if(role.permissions.includes("products_edit"))
              a.trash-icon(
                href=`${prefixAdmin}/accounts/trash`, title="Xóa"
              )
                i.fas.fa-trash

      table(
          class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th Avatar
            th Họ tên
            th Phân quyền
            th Email
            th Trạng thái
            th Hành động

        tbody
          each item, index in records
            tr
              td #{index+1}
              td
                img(
                  src=item.avatar,
                  alt=item.fullName,
                  class="img-thumbnail"
                )
              td #{item.fullName}
              td #{item.role.title}
              td #{item.email}
              td
                if(role.permissions.includes("account_edit"))
                  if item.status == "active"
                    a(
                      href="javascript:;"
                      data-status=item.status
                      data-id=item.id
                      button-change-status
                      class="badge badge-success"
                    ) Hoạt động
                  else
                    a(
                      href="javascript:;"
                      data-status=item.status
                      data-id=item.id
                      button-change-status
                      class="badge badge-danger"
                    ) Dừng hoạt động
              td
                .d-flex.justify-content-center
                  a(
                    href=`${prefixAdmin}/accounts/detail/${item.id}`
                    type="button"
                    class="btn-detail"
                  ) Chi tiết
                  if(role.permissions.includes("account_edit"))
                    a(
                      href=`${prefixAdmin}/accounts/edit/${item.id}`
                      type="button"
                      class="btn-edit"
                    ) Sửa
                  if(role.permissions.includes("account_delete"))
                    button(
                      data-id=item.id
                      button-delete
                      type="button"
                      class="btn-delete"
                    ) Xóa



    form(
      action=""
      method="post"
      id="form-change-status"
      data-path=`${prefixAdmin}/accounts/change-status`
    )

    form(
      action=""
      method="post"
      id="form-delete-item"
      data-path= `${prefixAdmin}/accounts/delete`
    )


    script(src="/admin/js/product.js")
