extends ../../layouts/default
include ../../mixins/filter-status.pug
include ../../mixins/alert.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/table-tree.pug

block main
  h1 Danh mục sản phẩm

  +alert-success(5000)
  +alert-error(5000)

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body.container-fluid
      .row
        .col-8
          +filter-status(filterStatus)
        .col-4
          form(id="form-search")
            .input-group
              input(type="text", placeholder="Nhập từ khóa", name="keyword", class="form-control", value = keyword)
              .input-group-append
                button(class="btn btn-success", type="submit") Tìm
  .card.mb-3
    .card-header Danh mục sản phẩm
    .card-body
      .row
        .col-4
          +form-change-multi(`${prefixAdmin}/products-category/change-multi?_method=PATCH`)
        .col-4.text-center
          a(
            href=`${prefixAdmin}/products-category/create`
            class="btn btn-outline-success"
          ) + Thêm mới
        .col-4.text-center
          a.trash-icon(
            href=`${prefixAdmin}/products-category/trash`, title="Xóa"
          )
            i.fas.fa-trash

        table(
          class="table table-hover table-sm"
          checkbox-multi
        )
          thead
            tr
              th
                input(type="checkbox" name="checkall")
              th STT
              th Hình ảnh
              th Tiêu đề
              th Vị trí
              th Trạng thái
              th Hành động

          tbody
            +table-tree(records)

  form(
    action=""
    method="post"
    id="form-change-status"
    data-path=`${prefixAdmin}/products-category/change-status`
  )

  form(
    action=""
    method="post"
    id="form-delete-item"
    data-path= `${prefixAdmin}/products-category/delete`
  )


  script(src="/admin/js/product.js")
